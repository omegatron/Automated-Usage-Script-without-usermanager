:local date
:local time
:local day
:local month
:local year
:local hour
 
:set date [/system clock get date]
:set time [/system clock get time]
:set day [:pick $date 4 6]
:set hour [:pick $time 0 2]

:if ([$hour] = "00") do={/system script run monthlyreportoffpeak; :log info "--Completed off peak monthly total--"}
:if ([$hour] = "01") do={/system script run monthlyreportoffpeak; :log info "--Completed off peak monthly total--"}
